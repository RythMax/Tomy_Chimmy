@model Tomy_Chimy.Web.ViewsModels.InvoiceView
@{
    ViewData["Title"] = "InvoicePDF";
    var id = Model.Invoice.Invoice_ID;
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Dashboard - SB Admin</title>
        <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
        <link href="~/sbadmin/css/styles.css" rel="stylesheet" />
        <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>

<div class="card bg-primary">
    <div class="col-md-12 col-sm-12">
        <div  class="X_panel">
            <div class="card-title">
        </div>
            <h2 class="text-black text-white">Factura</h2>
        </div>
    </div>
</div>

<!-- Info row -->

<div class="card m-2 p-2">
    <div class="row invoice-info">
        <div class="col-sm-4 invoice-col">
            <h1 class="text text-primary">Empresa</h1>
            <address>
                <strong>Tomy Chimy y más</strong><br />
                Avenida las Améericas <br />
                Santo Domingo <br />
                Teléfono: 809-635-3519<br />
                Email: TomyChimmy@gmail.com
            </address>
        </div>
        <!-- col -->
        <div class="col-sm-4 invoice-col">
            <h2 class="text text-primary">Proveedor</h2>
            <address>
                <strong>Nombre:</strong>
                <a>@Html.DisplayFor(model => model.Invoice.Client.FullName)</a><br />
                <strong>Dirección</strong>
                <a> @Html.DisplayFor(model => model.Invoice.Client.Dirección)</a><br />
                <strong>Teléfono :</strong>
                <a>  @Html.DisplayFor(model => model.Invoice.Client.Telefono)</a><br />
            </address>
        </div>
         <div class="col-sm-4 invoice-col">
            <div class="text text-primary">Factura</div>
            <br />
            <b>Factura # </b> @Html.DisplayFor(model => model.Invoice.Invoice_ID)<br />
            <b>Fecha y hora:</b> @Html.DisplayFor(model => model.Invoice.FechaFactura.Date)<br />
            <b>Forma de Pago: </b> @Html.DisplayFor(model => model.Invoice.PayingMethod.FormaDePago)<br />
         </div>
    </div>
</div>

<div class="card m-1 p-1">
    <div class="row">
        <div class="col-12 table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>ID</th>
                        <th>Descripcion</th>
                        <th>Precio Unitario</th>
                        <th>Cantidad</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody class="data">
                    @foreach (var item in Model.Artículos)
                   {
                       <tr>
                           <td>
                                @Html.DisplayFor(modelItem => item.Food.ID_Comidas)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Food.Descripción)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ValorUnitario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cantidad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ValorTotal)
                            </td>
                       </tr>
                   }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5" style="text-align:right;">@Html.DisplayNameFor(model => model.Invoice.Subtotal)</td>
                        <td style="text-align:right;" class="subtotal">@Html.DisplayFor(model => model.Invoice.Subtotal)</td>
                    </tr>
                    <tr>
                        <td colspan="5" style="text-align:right;">@Html.DisplayNameFor(model => model.Invoice.ValorImpuesto)</td>
                        <td style="text-align:right;" class="valori">@Html.DisplayFor(model => model.Invoice.ValorImpuesto)</td>
                    </tr>
                    <tr>
                        <td colspan="5" style="text-align:right;">@Html.DisplayNameFor(model => model.Invoice.Total)</td>
                        <td style="text-align:right;" class="valort">@Html.DisplayFor(model => model.Invoice.Total)</td>
                    </tr>
                    <tr></tr>
                </tfoot>
            </table>
        </div>
    </div>
        
</div>

<hr />

<div>
    <p class="m-2 p-2">Nota no se Aceptan deboluciones sin la Factura , gracias por su compra!!!</p>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

<script>
    $(document).ready(function () {
        window.print()
    });
</script>

